@page
@model Wikipedia.Pages.Posts.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Seguro que deseas eliminar el siguiente post?</h3>
<div>
    <h4>Post</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.Titulo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.Titulo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.Contenido)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.Contenido)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.Fecha)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.Fecha)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.Categoria)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.Categoria.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.Tag)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.Tag.Id)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Post.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Volver</a>
    </form>
</div>
